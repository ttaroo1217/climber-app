<header>
  <div class="header-top">
    <div class="container">
      <div class="header-contents">
        <div class="header-left">
          <%= link_to image_tag("Handdrawn Circle Logo.png", class:"header-logo"), "/" %>
        </div>
        <div class="header-right">
          <div class="header-right_button">
            <% if user_signed_in? %>
              <%= link_to current_user.name, "#", class: "user-name" %>
              <%= link_to 'ログアウト', "/users/sign_out", method: :delete, class: "logout" %>
            <% else %>
              <%= link_to 'ログイン', "/users/sign_in", class: "login" %>
              <%= link_to '新規登録', "/users/sign_up", class: "sign-up" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>