<div class="middle-wrapper">
  <div class="container">
    <div class="heading">
      <h2>Your Climbing Partners!</h2>
    </div>
    <% @users.each do |user| %>
      <% if user_signed_in? %>
        <%= link_to user_path(user.id), method: :get do %>
          <div class="middles">
            <div class="middle">
                <div class="middle-icon">
                  <%= image_tag user.image, class:"middle-logo" %>
                </div>
                <%= user.name %><br>
                <% if user_signed_in? && current_user.id != user.id %>
                  <% @follows.each do |follow| %>
                    <% if follow.follower_id == user.id%>
                      <%= "フォロー済み" %>
                    <% end %>
                  <%end%>
                <% end %>
            </div>
          </div>
        <% end %>
      <% else %>
        <%= link_to new_user_registration_path, method: :get do %>
          <div class="middles">
            <div class="middle">
                <div class="middle-icon">
                  <%= image_tag user.image, class:"middle-logo" %>
                </div>
                <%= user.name %>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>

