<div class="follow-btn-contents">
  <div class="container">
    <% if current_user != @user %>
      <% if @user.followed_by?(current_user) %>
        <div class="follow-btn-content">
          <p><%=link_to "フォロー済み", user_relationships_path(@user.id), class:"follow-btn", method: :delete %></p>
        </div>

        <div class="message-btn-content">
          <p><%=link_to "チャットルーム", user_messages_path(@user.id), class:"message-btn" %></p>
        </div>
        <div class="message-btn-content">
          <p><%=link_to "メッセージを送る", "/", class:"message-btn" %></p>
        </div>
      <% else %>
        <div class="follow-btn-content">
          <p><%=link_to "フォローする", user_relationships_path(@user.id), method: :post %></p>
        </div>
      <% end %>
    <% else %>
      <div class="toEdit-btn-content">
        <%=link_to "プロフィール編集", edit_user_registration_path(@user.id), class:"toEdit-btn"  %>
      </div>
    <% end %>
  </div>
</div>

