<%= render "shared/second-header"%>

<div class="rooms_top">
  <div class="container">
    <h1>チャットルーム</h1>
    <%# @followss.each do |follow| %>
    <% if @user.id == @follow.follower.id  %>
      <%= link_to image_tag(@user.image, class:"footer-logo") %>
    <% end %>
    <%# end %>

    <%=form_with model: @room, local: true do |f|%>
      <% if @room_match.empty? %>
        <input name="room[user_ids][]" type="hidden" value=<%= current_user.id %> >
        <input name="room[user_ids][]" type="hidden" value=<%= @user.id %> >
        <%= f.submit name="チャットルームを作成する", class: 'submit_room'%> 
      <% else %>
        <%= link_to "チャットルームに移動する", room_messages_path(user_id: @user.id, room_id: @room_match) %>
      <% end %>
    <% end %>
  </div>
</div>

<%= render "shared/second-footer"%>